<% layout("layouts/boilerplate.ejs") -%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <br>
        <h1><%= listing.title %></h1>
    </div>
    <div class="card col-8 offset-2 listing-card">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="...">
        <div class="card-body">
            <p class="card-text">
                <br><br><%= listing.description %>
                <br><br>&#8377;<%= listing.price.toLocaleString("en-IN") %>
                <br><br><%= listing.country %>
                <br><br><%= listing.location %>
            </p>
        </div>
    </div>

    <div class="row">
      
        <div class="col-2 offset-2">
            <button class="btn btn-dark"><a
                    href="/listings/<%=listing._id%>/edit">Edit</a></button>
        </div>
        <div class="col-6 offset-2"><form method="POST"
                action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark">DELETE</button>
            </form></div>
      

        <br>
        <br>
        <br>

        <div class="col-8 offset-2">
            <h4>Leave a Review</h4>
            <form method="post" action="/listings/<%=listing._id%>/reviews"
                class="needs-validation" novalidate>

                <!-- <div class="mb-3 col-md-4">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" name="review[rating]"/>
                        placeholder="Enter a Rating" class="form-range"
                        required>

                </div> -->
                <div class="mb-3 col-md-4">
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3 ">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]"
                        placeholder="Write a comment" class="form-control"
                        cols="30" rows="5" required></textarea>
                    <div class="invalid-feedback">Please provide a
                        comment.</div>
                </div>

                <button class="btn btn-outline-dark mb-3">Submit</button>
            </form>

            <hr>

            <p><b>All Reviews</b></p>
           <div class="row">
            <% for(review of listing.reviews) { %>
                <div class="card mb-2 col-5 ms-2">
                    <div class="card-body">
                       
                        <div class="card-title">PK</div>
                        <div class="card-text"><%= review.rating%>  star</div>
                        <p class="starability-result" data-rating="<%= review.rating%>">
                            Rated: 3 stars
                          </p>
                        <div class="card-text">
                            <%= review.comment%></div>
                       
                    </div>
                </div>
                <%} %>
           </div>
        </div>
    </div>
</div>