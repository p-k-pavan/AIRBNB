<% layout("layouts/boilerplate.ejs") -%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <br>
        <form method="POST"" action="/listings/<%=listing._id%>?_method=PUT">
            <h3>Create New LIsting</h3>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]"
                    placeholder="enter a title"
                    value="<%=listing.title%>"
                    class="form-control">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]"
                    placeholder="write a description"
                    class="form-control"><%=listing.description%>        </textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" name="listing[image]" placeholder="image url"
                    value="<%=listing.image%>"
                    class="form-control">
            </div>

            <div>
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]"
                    placeholder="enter a price" value="<%=listing.price%>"
                    class="form-control">
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]"
                    placeholder="enter a country" value="<%=listing.country%>"
                    class="form-control">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]"
                    placeholder="enter a location" value="<%=listing.location%>"
                    class="form-control">
            </div>
            <br>
            <br>
            <button class="btn add-btn">submit</button>
            <br>
            <br>
        </form>
    </div>
</div>
