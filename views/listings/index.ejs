<% layout("layouts/boilerplate.ejs") -%>


<div class="container-xl">
    <div class="row">
    
        <h1 class="mx-4">All Listing</h1>
    </div>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of allListing){ %>
        <div class="col mx-8">
            <a href="/listings/<%= list._id %>" class="list-link">
                <div class="card listing-card">
                    <img src="<%= list.image %>" class="card-img-top" alt="..." style="width: 22rem; height: 20rem;">
                    <div class="card-body">
                        <p class="card-text"><b><%= list.title %></b><br>&#8377; <%= list.price?.toLocaleString("en-IN") %> / night</p>

                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>
</div>
