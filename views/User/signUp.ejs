<% layout("layouts/boilerplate.ejs") -%>
<div class="row">
    <div class="col-6 offset-3">
        <form method="POST" action="/signUp" class="needs-validation" novalidate>
            <h3 class="mt-3">Sign Up</h3>

            <div class="mb-3">
                <label for="username" class="form-label">UserName</label>
                <input type="text" name="username"
                    placeholder="Enter a UserName" class="form-control"
                    id="username" required>
                <div class="invalid-feedback">Please provide a UserName.</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email"
                    placeholder="Enter a email" class="form-control"
                    id="email" required>
                <div class="invalid-feedback">Please provide a email.</div>
            </div>

            <div class="mb-5">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password"
                    placeholder="Enter a password" class="form-control"
                    id="password" required>
                <div class="invalid-feedback">Please provide a password.</div>
            </div>

            <p class="mb-3">Accouct Alredy exit? <a href="/login">SignUp</a></p>

            <button class="btn btn-dark mb-5">signUp</button>

        </form>
    </div></div>